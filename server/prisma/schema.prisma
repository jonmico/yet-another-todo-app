generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Todo {
  id          String    @id @default(uuid())
  title       String
  description String
  userId      String
  user        User      @relation(fields: [userId], references: [id])
  dueDate     DateTime?
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique(map: "User_email_key")
  password  String
  createdAt DateTime @default(now())
  todo      Todo[]
}
